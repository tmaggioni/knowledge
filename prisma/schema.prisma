generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String            @id @default(cuid())
  email     String            @unique
  password  String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  parent    String
  entities  Entity[]
  entitiesUsers UsersEntity[]
  categories Category[]
  cashFlow    CashFlow[]
}

model Entity {
  id          String            @id @default(cuid())
  name        String            @unique
  description String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  parent      User              @relation(fields: [parentId], references: [id]) 
  parentId    String
  users       UsersEntity[]
  cashflow CashFlow[]
  @@index([parentId])
}

model UsersEntity {
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  entityId    String
  entity       Entity @relation(fields: [entityId], references: [id] , onDelete: Cascade)
  
  @@id([userId, entityId])
  @@index([userId])
  @@index([entityId])
}

model Category {
  id          String            @id @default(cuid())
  name        String            @unique
  description String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  parent      User              @relation(fields: [parentId], references: [id]) 
  parentId    String
  cashFlow    CashFlow[]
  @@index([parentId])
}


model CashFlow{
  id  String  @id @default(cuid())
  name String
  description String
  type        String
  status      Boolean
  date        DateTime          
  amount      Decimal   
  typeFlow    String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  parent      User              @relation(fields: [parentId], references: [id]) 
  parentId    String
  entity      Entity            @relation(fields: [entityId], references: [id]) 
  entityId    String
  category      Category        @relation(fields: [categoryId], references: [id]) 
  categoryId    String

  @@index([entityId])
  @@index([categoryId])
  @@index([parentId])
}